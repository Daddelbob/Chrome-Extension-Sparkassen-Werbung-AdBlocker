{
    "manifest_version": 3,
    "name": "Chrome-Extension-Sparkassen-Werbung-AdBlocker",
    "version": "1.0.0",
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png"
    },
    "action": {
        "default_title": "Sparkasse AdBlocker",
        "default_icon": {
            "16": "icon-16.png",
            "32": "icon-32.png"
        }
    },
    "description": "Entfernt ein Sparkassen-Eigenwerbung aus dem DOM, falls bekannt und vorhanden.",
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "include_globs": [
                "*://sparkasse.de/*",
                "*://*.sparkasse.de/*",
                "*://sparkasse-*.de/*",
                "*://*.sparkasse-*.de/*",
                "*://*-sparkasse.de/*",
                "*://*.*-sparkasse.de/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "hide.css"
            ],
            "run_at": "document_start"
        }
    ]
}